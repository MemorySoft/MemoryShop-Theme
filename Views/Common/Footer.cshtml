@model FooterModel
@using Nop.Web.Extensions
@using Nop.Web.Models.Common;
@using Nop.Core
@using Nop.Core.Domain.Tax
@using Nop.Core.Infrastructure

<!--Footer-->
<footer id="footer">
		
    <div class="footer-widget">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <div class="single-widget">
                        <h2><a role="button" data-toggle="collapse" href="#uno">@T("Footer.Information")</a></h2>
                        <ul id="uno" class="nav nav-pills nav-stacked">
                            @if (Model.SitemapEnabled)
                            {
                                <li><a href="@Url.RouteUrl("Sitemap")">@T("Sitemap")</a></li>
                            }
                            <li><a href="@Url.RouteUrl("Topic", new {SeName = Html.GetTopicSeName("shippinginfo") })">@T("ShippingReturns")</a></li>
                            <li><a href="@Url.RouteUrl("Topic", new {SeName = Html.GetTopicSeName("privacyinfo") })">@T("PrivacyNotice")</a></li>
                            <li><a href="@Url.RouteUrl("Topic", new {SeName = Html.GetTopicSeName("conditionsofuse") })">@T("ConditionsOfUse")</a></li>
                            <li><a href="@Url.RouteUrl("Topic", new {SeName = Html.GetTopicSeName("aboutus") })">@T("AboutUs")</a></li>
                            <li><a href="@Url.RouteUrl("ContactUs")">@T("ContactUs")</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <div class="single-widget">
                        <h2><a role="button" data-toggle="collapse" href="#dos">@T("Footer.CustomerService")</a></h2>
                        <ul id="dos" class="nav nav-pills nav-stacked">
                            <li><a href="@Url.RouteUrl("ProductSearch")">@T("Search")</a> </li>
                            @if (Model.NewsEnabled)
                            {
                                <li><a href="@Url.RouteUrl("NewsArchive")">@T("News")</a></li>
                            }
                            @if (Model.BlogEnabled)
                            {
                                <li><a href="@Url.RouteUrl("Blog")">@T("Blog")</a></li>
                            }
                            @if (Model.ForumEnabled)
                            {
                                <li><a href="@Url.RouteUrl("Boards")">@T("Forum.Forums")</a></li>
                            }
                            @if (Model.RecentlyViewedProductsEnabled)
                            {
                                <li><a href="@Url.RouteUrl("RecentlyViewedProducts")">@T("Products.RecentlyViewedProducts")</a></li>
                            }
                            @if (Model.CompareProductsEnabled)
                            {
                                <li><a href="@Url.RouteUrl("CompareProducts")">@T("Products.Compare.List")</a></li>
                            }
                            @if (Model.RecentlyAddedProductsEnabled)
                            {
                                <li><a href="@Url.RouteUrl("RecentlyAddedProducts")">@T("Products.NewProducts")</a></li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <div class="single-widget">
                        <h2><a role="button" data-toggle="collapse" href="#tres">@T("Footer.MyAccount")</a></h2>
                        <ul id="tres" class="nav nav-pills nav-stacked">
                            <li><a href="@Url.RouteUrl("CustomerInfo")" class="account">@T("Account.MyAccount")</a></li>
                            @if (!Model.HideOrders)
                            {
                                <li><a href="@Url.RouteUrl("CustomerOrders")">@T("Account.CustomerOrders")</a></li>
                            }
                            @if (!Model.HideAddresses)
                            {
                                <li><a href="@Url.RouteUrl("CustomerAddresses")" class="">@T("Account.CustomerAddresses")</a></li>
                            }
                            @if (Model.ShoppingCartEnabled)
                            {
                                <li><a href="@Url.RouteUrl("ShoppingCart")" class="ico-cart">@T("ShoppingCart")</a></li>
                            }
                            @if (Model.WishlistEnabled)
                            {
                                <li><a href="@Url.RouteUrl("Wishlist")" class="ico-wishlist">@T("Wishlist")</a></li>
                            }
                        </ul>
                    </div>
                </div>	
                <div class="col-md-3 col-sm-3 col-xs-12">
                    @Html.Action("NewsletterBox", "Newsletter")   
                </div>
					
            </div>
        </div>
    </div>
		
    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 text-left">
                    <p>Con tecnología <span><a href="http://www.nopcommerce.com/">nopCommerce</a></span></p>

                    @*Would you like to remove the "Powered by nopCommerce" link in the bottom of the footer? Find more info here http://www.nopcommerce.com/copyrightremoval.aspx*@

                </div>
                <div class="col-sm-4 text-center">
                    @*@T("Content.CopyrightNotice", DateTime.Now.Year.ToString(), Model.StoreName)*@
                   <p> &copy; MemoryShop 2015</p>
                </div>
                <div class="col-sm-4 text-right">
                    <p>Desarrollado por <span><a target="_blank" href="http://memorysoft.es">Memory Soft</a></span></p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.DisplayTaxShippingInfoFooter)
    {
        var inclTax = EngineContext.Current.Resolve<IWorkContext>().TaxDisplayType == TaxDisplayType.IncludingTax;
        <div class="footer-bottom text-center">
            <div class="container">
                @T(inclTax ? "Footer.TaxShipping.InclTax" : "Footer.TaxShipping.ExclTax", Url.RouteUrl("Topic", new {SeName = Html.GetTopicSeName("shippinginfo")}))
            </div>
        </div>              
    }

    @Html.Widget("footer")

</footer>
<!--/Footer-->






